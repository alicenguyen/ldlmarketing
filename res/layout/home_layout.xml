<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/black_background"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/home_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LDL"
        android:textColor="@color/pink"
        android:textSize="110sp" />

    <TextView
        android:id="@+id/home_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-25dp"
        android:gravity="center"
        android:text="Marketing Services"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/buttons_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_about"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_square1"
            android:gravity="left|center_vertical"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
        <TextView
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <Button
            android:id="@+id/button_clientdir"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
               android:background="@drawable/grey_square1"
            android:text="Client Directory" >
        </Button>

        <Button
            android:id="@+id/button_portfolio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
               android:background="@drawable/grey_square1"
            android:text="Portfolio" >
        </Button>

        <Button
            android:id="@+id/button_services"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
               android:background="@drawable/grey_square1"
            android:text="Services" >
        </Button>

        <Button
            android:id="@+id/button_faqs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
               android:background="@drawable/grey_square1"
            android:text="FAQS" >
        </Button>

        <Button
            android:id="@+id/button_contactus"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
               android:background="@drawable/grey_square1"
            android:text="Contact Us" >
        </Button>
    </LinearLayout>

</LinearLayout>