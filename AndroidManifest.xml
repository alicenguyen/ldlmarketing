<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greendev.ldlmarketing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <data
                android:host="twitter"
                android:scheme="ldlmarketing" />
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".AboutActivity"
            android:label="About LDL" />
        <activity
            android:name=".LDLCamActivity"
            android:label="LDL Cam" />
        <activity
            android:name=".GalleryActivity"
            android:label="LDL Gallery" />
        <activity
            android:name=".PressActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".TwitterActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter"
                    android:scheme="ldlmarketing" />
            </intent-filter>
        </activity>
        
        <!-- Alice's Twitter implementation -->
        <activity
            android:name=".TwitterActivity2"
            android:label="LDL Twitter" />
        
        <!--  Used for OAuth callback -->
        <intent-filter>
            <action
                android:name="android.intent.action.VIEW" />
            <category
                android:name="android.intent.category.DEFAULT" />
            <category
                android:name="android.intent.category.BROWSABLE" />
            <data
                android:scheme="x-marakana-oauth-twitter"
                android:host="callback" />
        </intent-filter>
            <!-- end of OAuth callback -->
             
        <activity
            android:name=".YoutubeActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".PhotoActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".ClientDirectoryActivity"
            android:label="Client Directory" />
        <activity
            android:name=".ContactActivity"
            android:label="Contact Us" />
        <activity
            android:name=".FAQSActivity"
            android:label="FAQs" />
        <activity
            android:name=".PortfolioActivity"
            android:label="Portfolio" />
        <activity
            android:name=".ServicesActivity"
            android:label="Services" />
    </application>

</manifest>